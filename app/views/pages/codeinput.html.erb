<%= render "shared/backlink" %>
<div class="under-navbar-fixed top"></div>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="big-top-marged">
        <div>
          <%= image_tag "logo-white.png", class: "logo-devise-pages"%>
        </div>
        <h2>Code d'inscription</h2>
      </div>
      <%= simple_form_for :code, url: codecheck_path do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :signin_code, input_html: { value: nil }, label: false, placeholder: "Entrer votre code d'inscription" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "OK", class: "btn btn-danger btn-form-devise  btn-round" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :title, "Code" %>

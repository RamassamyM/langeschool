<div class="cover-background bg-white"></div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
      <div class="conversation-title">
        <h3>Conversation with <%= @interlocutor.first_name %></h3>
      </div>
      <div class="conversation-background">
        <% @messages.each do |message| %>
          <div class="message-line flexed-left <%= 'flexed-right-reverse' if current_user == message.author %>">
            <div>
              <%= cl_image_tag dynamic_avatar(message.author), class: 'conversation-card-avatar' %>
            </div>
            <div class="message-content">
              <p><%= message.content %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

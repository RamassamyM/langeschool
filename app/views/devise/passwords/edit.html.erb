<%= render "shared/backlink" %>
<div class="under-navbar-fixed top"></div>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="big-top-marged">
        <div>
          <%= link_to home_path  do %>
            <%= image_tag "logo-white.png", class: "logo-devise-pages"%>
          <% end %>
        </div>
        <h2>Changez votre mot de passe</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <div class="form-inputs">
          <%= f.input :password, label: "Nouveau mot de passe", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "Confirmer le nouveau mot de passe", required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sauvegarder", class: "btn btn-danger btn-form-devise btn-round"  %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<% content_for :title, "My account" %>

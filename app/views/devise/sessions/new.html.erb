<%= render "shared/backlink" %>
<div class="under-navbar-fixed top"></div>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="big-top-marged">
        <div>
          <%= image_tag "logo-white.png", class: "logo-devise-pages"%>
        </div>
        <h2>Je me connecte</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" %>
          <%= f.input :password, required: false, label: false, placeholder: "Mot de passe" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Connexion", class: "btn btn-danger btn-form-devise" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<% content_for :title, "My account" %>

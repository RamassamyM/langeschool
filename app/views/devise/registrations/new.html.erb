<div class="distributed">
  <%= render "shared/link-to-backhome" %>
  <div>
    <!-- %= image_tag "onmuze_logo_black_symbol.png", class: "logo-devise-pages"% -->
  </div>
  <div class="cheek"></div>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="margined">
        <h2>Je m'inscris</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name, welcome: true)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: "Prénom" %>
          <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: "Nom de famille" %>
          <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caractères au minimum" if @minimum_password_length), label: false, placeholder: "Mot de passe" %>
          <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirmer le mot de passe." %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-danger btn-form-devise" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<% content_for :title, "My account" %>

<div class="navbar-wagon navbar-wagon-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand flexed-left" do %>
    <%= image_tag "logo-blue.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to 'L\'actu', posts_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "Conseil des Parents", parentscouncil_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Adhérer", subscribe_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Conseil d'Ecole", schoolcouncil_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Messagerie', conversations_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= render 'shared/notification_dropdown', notification_badge_id: 'notification_badge_1',
                  notification_dropdown_block_id: 'notification_dropdown_1',
                  notification_badge_number: @notification_badge_number %>
      <%= link_to "Annuaire", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag dynamic_avatar(current_user), class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Mon profil") %>
              <% end %>
            </li>
            <li>
              <%= link_to home_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Accueil") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "S'inscrire"), new_user_registration_path, class: "btn btn-sm btn-danger btn-sign-up" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <% if user_signed_in? %>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <%= render 'shared/notification_dropdown', notification_badge_id: 'notification_badge_2',
                  notification_dropdown_block_id: 'notification_dropdown_2',
                  notification_badge_number: @notification_badge_number %>
    </div>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to 'L\'actu', posts_path %></li>
          <li><%= link_to 'Conseil des Parents', parentscouncil_path %></li>
          <li><%= link_to 'Adhérer', subscribe_path %></li>
          <li><%= link_to 'Conseil d\'Ecole', schoolcouncil_path %></li>
          <li><%= link_to 'Messagerie', conversations_path %></li>
          <li><a href="#">Annuaire</a></li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Mon profil") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-home"></i>  <%= t(".profile", default: "Accueil") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
      <div class="navbar-wagon-right hidden-md hidden-lg">
        <%= link_to t(".sign_in", default: "S'inscrire"), new_user_registration_path, class: "btn btn-sm btn-danger btn-sign-up" %>
      </div>
    <% end %>
</div>
<div class="under-navbar-fixed"></div>
